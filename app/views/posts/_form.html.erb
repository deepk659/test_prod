<%= form_for scope: :post, local: true do |form| %>
	<p>
		<%= form.label :title %>
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :comment %>
		<%= form.text_field :comment %>
	</p>
	<p>
		<%= form.label :count %>
		<%= form.text_field :count %>
	</p>
	<p>
		<%= form.submit %>
	</p>
	<% end %>